= render 'header'
%h4 Second Executor

= form_for [@will, @executor] do |f|
  = f.fields_for :second_executor_general_detail do |builder|
    = render "general_details/general_details_form", :builder => builder, :nested_origin => @executor.second_executor_general_detail
  .field.add-more-option
    .left
      = question "03040"
      = f.check_box :third
    = f.hidden_field :exec, value: "second"
    = f.submit 'Proceed', class: "button radius right"
.button-region
  = form_for [@will, @executor] do |f|
    = f.hidden_field :exec, value: "second"
    = f.hidden_field :second, value: false
    = f.submit 'Remove this executor', class: "cancel-forward button radius right"