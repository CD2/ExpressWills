= form_for @charity_detail do |f|
  - if @charity_detail.errors.any?
    #error_explanation
      %h2= "#{pluralize(@charity_detail.errors.count, "error")} prohibited this charity_detail from being saved:"
      %ul
        - @charity_detail.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :will
    = f.text_field :will
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :registered_charity_number
    = f.text_field :registered_charity_number
  .field
    = f.label :address_one
    = f.text_field :address_one
  .field
    = f.label :address_two
    = f.text_field :address_two
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :county
    = f.text_field :county
  .field
    = f.label :country
    = f.text_field :country
  .actions
    = f.submit 'Save'
