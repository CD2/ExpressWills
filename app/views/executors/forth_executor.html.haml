= render 'header'
%h4 Fourth Executor

= form_for [@will, @executor] do |f|
  = f.fields_for :forth_executor_general_detail do |builder|
    = render "general_details/general_details_form", :builder => builder, :nested_origin => @executor.forth_executor_general_detail
  = f.hidden_field :exec, value: "forth"
  .field.add-more-option

    = f.submit 'Proceed', class: "button radius proceed-js right"


.button-region
  = form_for [@will, @executor] do |f|
    = f.hidden_field :exec, value: "forth"
    = f.hidden_field :forth, value: false
    = f.submit 'Remove this executor', class: "cancel-forward button radius right"