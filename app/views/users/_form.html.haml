= form_for @user do |f|
  = render 'layouts/error_messages', object: f.object

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :password_confirmation, "Confirm Password"
    = f.text_field :password_confirmation
  .actions
    = f.submit 'Save'
