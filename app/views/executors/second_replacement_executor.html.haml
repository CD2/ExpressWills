= render 'header_rep'
%h4 Second Replacement Executor

= form_for [@will, @executor] do |f|

  = f.fields_for :second_replacement_executor_general_detail do |builder|
    = render "general_details/general_details_form", :builder => builder, :nested_origin => @executor.second_replacement_executor_general_detail
  .field.add-more-option
    .left
      = question "03080"
      = f.check_box :replacement_third
    = f.hidden_field :exec, value: "second_rep"
    = f.submit 'Proceed', class: "button radius right"
.button-region
  = form_for [@will, @executor] do |f|
    = f.hidden_field :exec, value: "second_rep"
    = f.hidden_field :replacement_second, value: false
    = f.submit 'Remove this executor', class: "cancel-forward button radius right"