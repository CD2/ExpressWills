= render 'header'
%h4 Third Guardian


= form_for [@will, @guardian] do |f|
  = f.hidden_field :exec, value: "third"
  = f.fields_for :third_guardian_general_detail do |builder|
    = render "general_details/general_details_form", :builder => builder, :nested_origin => @guardian.third_guardian_general_detail
  .field.add-more-option
    .left
      = question "05050"
      = f.check_box :forth_guardian

    = f.submit 'Proceed', class: "button radius right"


.button-region
  = form_for [@will, @guardian] do |f|
    = f.hidden_field :exec, value: "third"
    = f.hidden_field :third_guardian, value: false
    = f.submit 'Remove this guardian', class: "cancel-forward button radius right"