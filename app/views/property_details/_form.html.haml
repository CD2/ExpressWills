  .field
    = f.label :land_reg_number
    = f.text_field :land_reg_number
  .field
    = f.label :address_one
    = f.text_field :address_one
  .field
    = f.label :address_two
    = f.text_field :address_two
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :county
    = f.text_field :county
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :postcode
    = f.text_field :postcode
