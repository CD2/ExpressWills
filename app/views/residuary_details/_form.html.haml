
= form_for [@will, @residuary_detail] do |f|

  =# render "layouts/select_list", :f => f, select_list: :certain_age, q_no: "10030", options: ["no"] + (16..40).to_a.map {|i| i.to_s}, label_text: "Certain Age"
  =# render "layouts/select_list", :f => f, select_list: :if_dead_certain_age, q_no: "10050", options: ["no"] + (16..40).to_a.map {|i| i.to_s}, label_text: "Certain Age"

  = render "layouts/select_list", :f => f, select_list: :residuary_type, q_no: "10010", options: ["Individual" , "My children", "My grandchildren"  , "Charity", "I do not wish to specify a beneficiary"], label_text: "Residuary type", label_text: "Beneficiary type"
  = f.hidden_field :count, value: @will.residuary_details.count+1
  %div{"data-condition" => ":checked", "data-require" => "option[value='I do not wish to specify a beneficiary']", "data-true" => "hide"}
    = f.submit 'Proceed', class: "button radius"
  %div{"data-condition" => ":checked", "data-require" => "option[value='I do not wish to specify a beneficiary']", "data-true" => "show", "data-false" => "hide"}
    = f.submit 'Proceed', class: "button radius", :onclick => "return confirm('It is strongly advisable to appoint an executor. Are you sure you wish to proceed without appointing an executor?')"