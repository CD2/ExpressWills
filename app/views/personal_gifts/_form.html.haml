%h5
  %b Recipient details
= form_for [@will, @personal_gift] do |f|
  = render 'layouts/error_messages', object: f.object
  = render "layouts/text_field", :f => f, text_field: :first_name, origin: @personal_gift
  = render "layouts/text_field", :f => f, text_field: :middle_name, origin: @personal_gift
  = render "layouts/text_field", :f => f, text_field: :surname, origin: @personal_gift
  = render "layouts/text_field", :f => f, text_field: :address_one, origin: @personal_gift
  = render "layouts/text_field", :f => f, text_field: :address_two, origin: @personal_gift
  = render "layouts/text_field", :f => f, text_field: :city, origin: @personal_gift
  = render "layouts/text_field", :f => f, text_field: :county, origin: @personal_gift
  = render "layouts/text_field", :f => f, text_field: :postcode, origin: @personal_gift
  = render "layouts/text_field", :f => f, text_field: :country, origin: @personal_gift
  = render "layouts/text_area", :f => f, text_area: :description, q_no: "09020"
  = f.hidden_field :count, value: @will.personal_gifts.count+1
  .button-region
    = f.submit 'Proceed', class: "button radius right"
    = link_to 'Discard', new_will_residuary_detail_path, class: "button radius cancel-forward"
