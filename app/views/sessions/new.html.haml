- provide(:title, "Sign in")
.narrow-logo
  = image_tag("logo.png")
%h1 Sign in
%p
  To create and manage an Express Will you must sign in. New user? 
  = link_to "Sign up now!", signup_path
%hr


  = form_for :session, url: sessions_path do |f|
    .field
      = f.label :email
      = f.email_field :email, placeholder: "Email"
    .field
      = f.label :password
      = f.password_field :password, placeholder: "Password"
    .field.check_box_field
      = f.label :remember_me do
        = f.check_box :remember_me
        %span Remember me on this device
    .actions
      = f.submit "Log in"

= link_to "Forgot password?", new_password_reset_path, class: "minor_form_link"
