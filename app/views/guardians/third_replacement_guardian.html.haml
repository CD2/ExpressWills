= render 'rep_header'
%h4 Third Replacement Guardian


= form_for [@will, @guardian] do |f|
  = f.hidden_field :exec, value: "third_rep"
  = f.fields_for :third_replacement_guardian_general_detail do |builder|
    = render "general_details/general_details_form", :builder => builder, :nested_origin => @guardian.third_replacement_guardian_general_detail
  .field.add-more-option
    .left
      = question "05090"
      = f.check_box :replacement_forth_guardian

    = f.submit 'Proceed', class: "button radius right"

.button-region
  = form_for [@will, @guardian] do |f|
    = f.hidden_field :exec, value: "third_rep"
    = f.hidden_field :replacement_third_guardian, value: false
    = f.submit 'Remove this guardian', class: "cancel-forward button radius right"