= render 'header_rep'
%h4 Third Replacement Executor

= form_for [@will, @executor] do |f|

  = f.fields_for :third_replacement_executor_general_detail do |builder|
    = render "general_details/general_details_form", :builder => builder, :nested_origin => @executor.third_replacement_executor_general_detail
  .field.add-more-option
    .left
      = question "03090"
      = f.check_box :replacement_forth
    = f.hidden_field :exec, value: "third_rep"
    = f.submit 'Proceed', class: "button radius right"
.button-region
  = form_for [@will, @executor] do |f|
    = f.hidden_field :exec, value: "third_rep"
    = f.hidden_field :replacement_third, value: false
    = f.submit 'Remove this executor', class: "cancel-forward button radius right"